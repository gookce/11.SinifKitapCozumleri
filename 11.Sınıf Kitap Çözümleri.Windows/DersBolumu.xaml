<Page
    x:Class="_11.Sınıf_Kitap_Çözümleri.DersBolumu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_11.Sınıf_Kitap_Çözümleri"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Margin="-9,-12,9,12">

    <Grid Margin="6,9,-6,-9" >
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/last.jpg"/>
        </Grid.Background>
        <TextBlock x:Name="txtDersAdı" HorizontalAlignment="Left" Margin="507,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="375" Height="76" Foreground="White" FontFamily="Buxton Sketch" FontSize="48"/>
        <TextBox x:Name="txtDersicerik" HorizontalAlignment="Left" Margin="7,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="674" Width="1356" ScrollViewer.VerticalScrollBarVisibility="Auto" Background="{x:Null}" BorderBrush="#FF4D4949" Foreground="Black"/>
        <Button Content="Geri" HorizontalAlignment="Left" Margin="9,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.488,0.447" Width="134" Height="69" Background="{x:Null}" BorderBrush="#FF5B5959" FontFamily="Buxton Sketch" FontSize="36" Click="Button_Click"/>
    </Grid>
</Page>
